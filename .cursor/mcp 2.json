{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"]
    },

    "Sequential-Thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
    },

    "Checkpoint-Sanity": {
      "command": ".venv/bin/python",
      "args": ["-u", "mcp/checkpoint_sanity/server.py"],
      "env": {
        "PYTHONUNBUFFERED": "1",
        "PYTHONPATH": "."
      },
      "workingDirectory": "."
    }
  }
}