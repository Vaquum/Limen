{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"]
    },

    "Sequential-Thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
    },

    "Checkpoint-Sanity": {
      "command": ".venv/bin/python",
      "args": ["-u", "mcp/checkpoint_sanity/server.py"],
      "env": {
        "PYTHONUNBUFFERED": "1",
        "PYTHONPATH": "."
      },
      "workingDirectory": "."
    },

    "Playwright": {
      "command": "npx",
      "args": ["-y", "@agentdeskai/browser-tools-mcp@1.1.0"],
      "env": {
        "PLAYWRIGHT_BROWSERS_PATH": "0"
      }
    },

    "Playwright-Driver": {
      "command": ".venv/bin/python",
      "args": ["-u", "mcp/playwright_driver/server.py"],
      "env": { "PYTHONUNBUFFERED": "1", "PYTHONPATH": "." },
      "workingDirectory": "."
    }
    
  }
}